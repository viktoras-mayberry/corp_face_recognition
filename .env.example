# =============================================================================
# CORPS ATTENDANCE SYSTEM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values according to your setup

# Flask Configuration
# ===================
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_CONFIG=development
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
# =====================
# Development (SQLite)
DATABASE_URL=sqlite:///corps_attendance.db
# Production (PostgreSQL example)
# DATABASE_URL=postgresql://username:password@localhost/corps_attendance

# Face Recognition Settings
# ========================
FACE_RECOGNITION_TOLERANCE=0.6
MAX_FACE_DISTANCE=0.4

# Email Configuration (Gmail example)
# ===================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
ADMIN_EMAIL=admin@corps.gov.ng

# SMS Configuration (Twilio)
# =========================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Security Settings
# ================
JWT_SECRET_KEY=your-jwt-secret-key-change-this
WTF_CSRF_ENABLED=True

# File Upload Settings
# ===================
MAX_CONTENT_LENGTH=16777216

# Logging
# =======
LOG_LEVEL=INFO
LOG_TO_STDOUT=False

# Cache and Background Tasks (Production)
# =======================================
REDIS_URL=redis://localhost:6379

# Deployment Settings
# ==================
# Heroku will set PORT automatically
PORT=5000

# Optional: Monitoring (Sentry)
# =============================
# SENTRY_DSN=your-sentry-dsn-here
